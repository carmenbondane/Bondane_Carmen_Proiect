@page
@model Bondane_Carmen_Proiect.Pages.Albums.IndexModel

@{
    ViewData["Title"] = "Welcome!";
}
<script src='https://kit.fontawesome.com/a076d05399.js'></script>
<style>
    
    h1 {
        color: cornflowerblue;
        font-family: 'Berlin Sans FB';
    }
</style>
<h1>Welcome to Music Land!</h1>
<h4>These are the current albums in stock</h4>

<p>
    <a asp-page="Create">Add a new album</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Album[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Album[0].Singer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Album[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Album[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Album[0].RecordLabel.RLName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Album[0].AlbumGenres)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.AlbumD.Albums) {
            string selectedRow = "";
            if (item.ID == Model.AlbumID)
            {
                selectedRow = "table-success";
            }
        <tr class="@selectedRow">
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Singer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RecordLabel.RLName)
            </td>
            <td>
                @{
                    foreach (var genre in item.AlbumGenres)
                    {
                         @: @genre.Genre.GenreName <br />
                    }
                }
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID"><i class='fas fa-edit' style='font-size:20px;color:cornflowerblue'></i></a> |
                <a asp-page="./Details" asp-route-id="@item.ID"><i class='far fa-clipboard' style='font-size:20px;color:cornflowerblue'></i></a> |
                <a asp-page="./Delete" asp-route-id="@item.ID"><i class='fas fa-trash' style='font-size:20px;color:cornflowerblue'></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
